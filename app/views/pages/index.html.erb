<script>
$(function() {
var pull 		= $('#pull');
menu 		= $('nav ul');
menuHeight	= menu.height();

$(pull).on('click', function(e) {
e.preventDefault();
menu.slideToggle();
});
});
</script>

<script>
$(window).resize(function(){
var w = $(window).width();
if(w > 320 && menu.is(':hidden')) {
menu.removeAttr('style');
}
});
</script>

<script>
    $(function() {
        var pullfoot 		= $('#pullfoot');
        services 		= $('foot ul');
        servicesHeight	= services.height();

        $(pullfoot).on('click', function(e) {
            e.preventDefault();
            services.slideToggle();
        });
    });
</script>

<script>
    $(window).resize(function(){
        var w = $(window).width();
        if(w > 320 && services.is(':hidden')) {
            services.removeAttr('style');
        }
    });
</script>