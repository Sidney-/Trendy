<%= form_for @mcms,  url: admin_CbimageSave_path , :html => {:multipart => true} do |f| %>
    <p>
      <%= f.label "Top Banner" %><br />
      <%= f.file_field :pic1 %>
    </p>

    <p>
        <div class="field">
          <%= f.label "Slider" %><br>
          <%= f.file_field :pic2, :multiple => true, name: "post_attachments[pic2][]" %>
        </div>


    </p>

    <p>
      <%= f.label "Brands" %><br />
      <%= f.file_field :pic3, :multiple => true, name: "brands[pic3][]" %>
    </p>



    <p><%= f.submit "Save"%></p>
<% end %>
