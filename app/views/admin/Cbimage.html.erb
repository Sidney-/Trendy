<div id="banner-wrapper">
  <div id="banner-container">
    <%= form_for @mcms,  url: admin_Cbimage_path , :html => {:multipart => true} do |f| %>
        <p>
            <h1><%= f.label "Edit Top Banner Image:" %></h1>
           <%= f.file_field :pic1 %>
        </p><br>

        <p>
            <h1><%= f.label "Edit Slider Image(s):" %></h1>
            <%= f.file_field :pic2, :multiple => true, name: "post_attachments[pic2][]" %>
        </p><br>

        <p>
            <h1><%= f.label "Edit Brand(s)" %></h1>
            <%= f.file_field :pic3, :multiple => true, name: "mbrands[pic3][]" %>
        </p>

        <p><br>
            <%= f.submit "Save"%>
        </p>

    <% end %>

      <%= link_to 'Back to Panel', admin_path %>
  </div>
</div>